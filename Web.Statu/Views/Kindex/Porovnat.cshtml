@model List<HlidacStatu.Lib.Analysis.KorupcniRiziko.SubjectWithKIndexAnnualData>

@using Devmasters.Enums;
@using HlidacStatu.Lib.Analysis.KorupcniRiziko;
@using HlidacStatu.Web.Framework;
@using System.Linq;
@using System.Text.RegularExpressions;

@{

    int selectedYear = ViewBag.SelectedYear;


    ViewBag.Title = "K–Index porovnání";
    //ViewBag.SubTitle = "pro " + firma.Jmeno;
    ViewBag.HideTitle = true;

    //Statistics statistics = Statistics.GetStatistics(selectedYear);

    string ukazatTxt = "ukázat detail";
    string schovatTxt = "schovat detail";

}

@section scripts
{

}

@section breadcrumb
{
    <ol class="breadcrumb">
        <li><a href="/">Hlídač Státu</a></li>
        <li><a href="/kindex">K–Index</a></li>
        <li><a href="/kindex/porovnat">Porovnání úřadů a organizací</a></li>
        <li class="active">@(ViewBag.Title + " " + ViewBag.SubTitle)</li>
    </ol>
}

<style>
    .whisp {
        width: 600px;
        text-align: left;
        background-color: white;
        border-left: 2px grey solid;
        border-top: 0px;
        border-bottom: 1px grey dotted;
        border-right: 0px grey solid;
        padding-bottom: 2px;
    }

        .whisp:focus {
            background-color: lightblue;
        }

    #companies {
        margin-bottom: 10px;
    }

    .porovnani {
        font-size: 15px;
        vertical-align: top;
    }

    .porovnaniHead {
        min-width: 160px;
        width: 160px;
    }
</style>

<h2>Porovnání vybraných K–Indexů pro rok @selectedYear</h2>

<div class="row">
    <div class="col-sm-12">
        <h3 class="">
            Porovnání pro další roky:
            @foreach (int year in Consts.CalculationYears )
            {
                if (year != selectedYear)
                {
                    <a style="padding-right:20px;" href="?rok=@year"><i class="fas fa-arrow-square-right"></i>@year</a>
                }
                else
                {
                    <span style="padding-right:20px;"><i class="far fa-arrow-square-right"></i>@year</span>
                }
            }
        </h3>
    </div>
</div>

<div class="bs-callout bs-callout-primary" style="padding-bottom:30px;">
    <h4>Porovnání základních hodnot</h4>
    <p>Porovnání hodnot, které dohromady skládají výslednou známku K–Indexu</p>

</div>

<input placeholder="Přidat úřad/firmu" type="text" name="addComparison" id="addComparison" class="form-control companyahead input-lg" oninput="FindCompany(this)" />
<div id="companies">

</div>

<div class="row">
    <div class="col-sm-12">

        <table class="table table-no-border">
            <tbody>
                <tr id="nazev">
                    <td style="width:290px">firma</td>
                    @foreach (var cmp in Model)
                    {
                        <th class="porovnaniHead number @cmp.Ico">
                            <a href="#" onclick="RemoveCompany('@cmp.Ico'); return false;" style="color: red; float:left"><i class="far fa-trash-alt"></i></a> <a href="/kindex/detail/@cmp.Ico">@(Devmasters.Core.TextUtil.ShortenText(@cmp.Jmeno, 55))</a>
                        </th>
                    }

                </tr>
                <tr id="kindex">
                    <th>Celková známka</th>
                    @foreach (var cmp in Model)
                    {
                        <td class="porovnani total number @cmp.Ico">
                            @Html.KIndexIcon(cmp.AnnualData.KIndexLabel, "width: 30px", true)
                        </td>
                    }
                </tr>

                @foreach (KIndexData.KIndexParts velicina in Enum.GetValues(typeof(KIndexData.KIndexParts)))
                {
                    <tr id="@velicina">
                        <th>
                            @velicina.ToNiceDisplayName()
                            <small><a href="#detail_@((KIndexData.KIndexParts)velicina)" onclick="showHelp(this,'#detail_@(velicina)');return false;">@ukazatTxt</a></small>
                            <div id="detail_@velicina" style="display:none">
                                <div class="row">
                                    <div class="col-xs-11 col-lg-offset-1 box-stats" style="background-color:#f9f9fe">
                                        @(Html.Raw(KIndexData.PartsDescription(velicina)))
                                    </div>
                                </div>
                            </div>
                        </th>
                        
                        @foreach (var cmp in Model)
                        {
                            var hodnota = cmp.AnnualData?
                                .KIndexVypocet?.Radky?
                                .Where(r => r.Velicina == (int)velicina)
                                .Select(r => r.Hodnota)
                                .FirstOrDefault();

                            <td class="porovnani number @cmp.Ico">
                                @*@(hodnota?.ToString("F2") ?? "Chybí K–Index")*@

                                @Html.KIndexIcon(KIndexData.KIndexLabelForPart(velicina, hodnota ?? 0),
                                    "height:25px",
                                    showNone: true,
                                    title: KIndexData.KIndexCommentForPart(velicina, cmp.AnnualData))
                            </td>
                        }
                        
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<script>

    function FindCompany(caller) {
        let req = "/kindex/findcompany/" + caller.value;
        $.get(req, function (data) {
            EmptyCompanies();
            data.forEach(comp => {
                var button = $('<button/>',
                    {
                        text: comp.Name,
                        class: 'whisp',
                        click: function () { AddCompany(comp.Ico, 2019); EmptyCompanies(); CleanSearchBox(); }
                    });

                $("#companies").append(button);
            });
        }, "json");
        Navigate();
    }

    function EmptyCompanies() {
        $('#companies').empty();
    }

    function CleanSearchBox() {
        $('#addComparison').val("").focus();
    }

    function AddCompany(ico, year) {
        window.history.pushState("", "", window.location.href + "," + ico);

        let req = "/kindex/KindexForIco/" + ico + "?year=" + year;
        $.get(req, function (data) {
            $("#nazev").append(`<th class="porovnaniHead number ${data.Ico}" style="width: 150px"><a href="#" onclick="RemoveCompany('${data.Ico}'); return false;" style="color: red; float:left"><i class="far fa-trash-alt"></i></a><a href="/kindex/detail/${data.Ico}">${data.Jmeno}</a></th>`);
            $(`#kindex`).append(`<td class="porovnani number ${data.Ico}">${data.Kindex}</td>`);
            data.Radky.forEach(radek => {
                $(`#${radek.VelicinaName}`).append(`<td class="porovnani number ${data.Ico}">${radek.Label}</td>`);
            });

        }, "json");
    }

    function RemoveCompany(ico) {
        let re = new RegExp(`,?${ico}`, "g");
        let href = window.location.href.replace(re, "").replace("/,", "/");
        window.history.pushState("", "", href);

        $(`.${ico}`).remove();
    }

    function Navigate() {

        var index = -1;

        jQuery(parent).on('keydown', function (e) {
            var checkboxes = $('#companies').find('button.whisp');
            if (e.keyCode == 38) {
                if (index > 0) {
                    index = index - 1;
                }
                checkboxes[index].focus();
                e.preventDefault();
                e.stopPropagation();
            }
            else if (e.keyCode == 40) {
                if (index < checkboxes.length - 1) {
                    index = index + 1;
                    e.preventDefault();
                    e.stopPropagation();
                }
                else {
                    index = checkboxes.length - 1;
                }
                checkboxes[index].focus();
            }
            else if (e.keyCode == 27) {
                EmptyCompanies();
                CleanSearchBox();
            }

        });
    }

    //function CancelKeyDownDefault(event) {
    //    if (e.keyCode == 40) {
    //        event.preventDefault();
    //        event.stopPropagation();
    //    }
    //}

    function showHelp(btn, id) {
        var visible = $(btn).text().includes('@ukazatTxt');
        if (visible) {
            $(id).show(300);
            $(btn).text('@schovatTxt');
        }
        else {
            $(id).hide(300);
            $(btn).text('@ukazatTxt');
        }
    }

</script>