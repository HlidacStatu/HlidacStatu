@model IEnumerable<Company>

@using Devmasters.Core;
@using HlidacStatu.Lib.Analysis.KorupcniRiziko;
@using HlidacStatu.Web.Framework;
@using System.Linq;
@using System.Text.RegularExpressions;

@{

    int selectedYear = ViewBag.SelectedYear;


    ViewBag.Title = ViewBag.LadderTitle + " pro " + ViewBag.SelectedYear;
    ViewBag.HideTitle = true;


}

@section scripts
{

}

@section breadcrumb
{
    <ol class="breadcrumb">
        <li><a href="/">Hlídač Státu</a></li>
        <li>K–Index</li>
        <li class="active">@ViewBag.Title</li>
    </ol>
}

<h2>@(ViewBag.LadderTitle) pro rok @ViewBag.SelectedYear</h2>
<p>Ukazuje o kolik se zlepšilo (kladná hodnota) nebo zhoršilo (záporná hodnota) hodnocení K-Indexu u jednotlivých firem</p>

<div class="row">
    <div class="col-sm-12">
        <h3 class="">
            Žebříček pro další roky:
            @for (int year = DateTime.Now.Year - 1; year > 2017; year--)
            {
                if (year != ViewBag.SelectedYear)
                {
                    <a style="padding-right:20px;" href="@(ViewBag.SelectedLadder)?rok=@year"><i class="fas fa-arrow-square-right"></i> @year</a>
                }
                else
                {
                    <span style="padding-right:20px;"><i class="far fa-arrow-square-right"></i> @year</span>
                }
            }
        </h3>
    </div>
</div>
<hr style="width:1px" />
<div class="row" >
    <div class="col-sm-12">

        <table class="table table-striped table-dotted table-condensed table-hover">
            <thead>
                <tr>
                    <th>Pořadí</th>
                    @*<th>Hodnota</th>*@
                    <th>Firma</th>
                    <th style="text-align: right;">Změna bodů</th>
                    @*<td>Přidat do porovnání</td>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var record in Model.Where(r => r.Value4Sort != HlidacStatu.Lib.Analysis.KorupcniRiziko.Consts.MinSmluvPerYearKIndexValue).Select((m, i) => new { rank = i + 1, item = m }))
                {
                    <tr>
                        <td>
                            @(record.rank).
                        </td>
                        @*<td>
                            @Html.KIndexLabelLink(record.item.Ico, showNone: true, rok: selectedYear)
                        </td>*@
                        <td>
                            <a href="/subjekt/@record.item.Ico">@record.item.Name</a>
                        </td>
                        <td class="number">
                            <a href="/kindex/detail/@record.item.Ico?rok=@selectedYear">
                                @(record.item.Value4Sort?.ToString("F2"))
                            </a>
                        </td>
                        @*<td></td>*@
                    </tr>
                }
            </tbody>
        </table>
        

    </div>
</div>
