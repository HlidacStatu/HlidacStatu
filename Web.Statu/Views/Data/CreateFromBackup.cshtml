
@using Nest;
@using HlidacStatu.Lib;
@using System.Linq;
@using Devmasters;
@using Devmasters.Collections;
@using HlidacStatu.Lib.Data.External.DataSets;
@using System.Text.RegularExpressions;
@{

    ViewBag.Title = "Přidání datasetu ze zálohy parametrů datasetu";
    ViewBag.SubTitle = "Postup pro netechnické uživatele";

    ApiResponseStatus err = ViewBag.ApiResponseError;

}
@section scripts
{

}


@section breadcrumb
{
    <ol class="breadcrumb">
        <li><a href="/">Hlídač Státu</a></li>
        <li><a href="/data">Další databáze</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
}

@if (err != null)
{
    <h3 class="text-danger">Chyba při ukládání datasetu</h3>
    <p class="bg-danger">
        <b>Chyba</b>: @(err.error?.description)<br />
        Hodnota: @(err.value?.ToString())<br />
        ErrorNumber: @(err.error?.number)<br />
        ErrorDetail: @(err.error?.errorDetail)<br />
    </p>

}

<div class="row">
    <div class="col-xs-12 col-sm-offset-1 col-sm-11">
        <h2>Jak na to?</h2>
        <p>
            Tento postup je vhodný pouze pro situace, kdy máte stáhnutou zálohu nastavení již (dříve nebo stále) existujícího datasetu.
        </p>
    </div>
    <h3>1. krok</h3>
    <div class="col-xs-12 col-sm-offset-1 col-sm-11">
        <p>
            Hlídač v tomto průvodci umí zpracovat data uloženou zálohu datasetu, která je ve formátu JSON.
        </p>
        <form method="post" class="form-horizontal form-control-new--small" enctype="multipart/form-data">
        <input type="hidden" name="step" value="1" />
            <div class="form-group">
                @Html.Label("data", "JSON záloha nastavení datasetu", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    <input type="file" name="file" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-warning btn">Nahrát soubor a pokračovat na další krok</button>

                </div>
            </div>

        </form>
    </div>
</div>
