    <div class="container">
        @if (ViewBag.HideAd == true)
        { 
            <span></span>
        }
        else
        {
            @Util.TitleAds()
        }
    </div>
    <div class="title">
        @if (IsSectionDefined("title"))
        {
            @RenderSection("title", required: false)
        }
        else if (!string.IsNullOrEmpty((string)ViewBag.Title))
        {
            <div class="container">
                <div class="col-md-10 col-md-offset-1">
                    <h1>@ViewBag.Title</h1>
                    @if (!string.IsNullOrEmpty((string)ViewBag.SubTitle))
                    {
                        <p class="center-block text-center">@ViewBag.SubTitle</p>
                    }
                </div>
            </div>

        }
    </div>
    <div class="body">
