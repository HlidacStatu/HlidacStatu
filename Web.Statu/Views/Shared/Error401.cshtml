
@using HlidacStatu.Web;

@using System.Linq;
@using Devmasters;
@{ 
    Response.StatusCode = 401;
    string url = ViewBag.SourceUrl;
    if (!string.IsNullOrEmpty(Request.QueryString["from"]))
    {
        url  = Request.QueryString["from"];
    }
}

@section scripts
{
}



@section title {
    <div class="container">
        <div class="col-md-10 col-md-offset-1">
            <h1>Je potřeba se zalogovat</h1>
        </div>
    </div>
}

<script>
    ga('send', 'event', 'errorpage', '401', '@url');
</script>
<h3 class="text-center" style="padding-bottom:30px;">Omlouváme se, ale na tuto stránku je nutné se přihlásit.</h3>
<p class="text-center">
    
    <a class="btn btn-primary btn-lg" href="@Url.Action("Login", "Account")?ReturnUrl=@(System.Net.WebUtility.UrlEncode(url))" role="button">Přihlásit se</a>
    <br />
    <a class="btn btn-primary btn" href="@Url.Action("Login", "Account")?ReturnUrl=@(System.Net.WebUtility.UrlEncode(url))" role="button">zdarma se zaregistrovat (pokud nemáte přihlašovací údaje)</a>

</p>
