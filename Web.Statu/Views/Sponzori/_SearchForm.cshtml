@model HlidacStatu.Web.Models.UctySearchResult

<div class="row">
    <p class="col-xs-offset-0 col-xs-12 col-md-offset-0 col-md-12">
        @using (Html.BeginForm("Hledat", "Ucty", FormMethod.Get, new {  @class = "form-inline", role = "form" }))
        {
            @Html.Hidden("Id", System.Net.WebUtility.UrlEncode(Model?.BU?.CisloUctu ?? ""))
            <h3>Prohledávání transakcích na transparentních účtech 
            @*<small><button type="button" class="btn btn-info btn-link" style="left:10px;" data-toggle="modal" data-target="#search-query-help">Nápověda</button></small>*@
        </h3>
            <div id="custom-search-input" class="col-xs-12">
                <div class="input-group col-xs-12">

                    <input class="form-control input-lg" id="Q" name="Q" placeholder="" style="max-width: none;" type="text" value="@(Model?.Query ?? "")">

                    <span class="input-group-btn text-right" style="padding-right:20px;width:1px;">
                        <button class="btn btn-default btn-lg" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                        @*<button type="button" class="btn btn-info btn-lg" style="left:10px;" data-toggle="modal" data-target="#search-query-help">Nápověda</button>*@
                    </span>
                </div>
            </div>
        }
    </p>
</div>

<hr style="padding-bottom:30px;" />

