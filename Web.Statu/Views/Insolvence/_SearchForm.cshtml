@model HlidacStatu.Lib.ES.InsolvenceSearchResult



    <div class="form-search">
        <label class="sr-only" for="I">Hledat v insolvenc&#xED;ch</label>

        <form method="get" action="/insolvence/hledat"  class="form-search__input-wrapper"  role="form">
                    <input class="form-search__input" id="Q" name="Q" placeholder="Název společnosti, osoby, IČO, spisová značka, ..." 
                           style="max-width: none;" type="text" value="@Model.Q">

                        <button class="form-search__btn" type="submit">Hledat pouze v insolvencích</button>
        </form>
        <div class="row">
            <div class="col-sm-10 col-xs-12">
                <p class="form-search__hint">
                    Příklady hledání: 
                </p>
            </div>
            <div class="col-sm-2 col-xs-12">
                <p>
                    <a class="form-search__hint pull-right" href="/napoveda">
                        Jak vyhledávat?
                    </a>
                </p>
            </div>
        </div>
        @Html.Partial("_SearchFormHelp")

        <div class="clearfix" style="padding-bottom:20px;"></div>
