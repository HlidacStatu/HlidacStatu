@model HlidacStatu.Lib.ES.InsolvenceSearchResult


<form method="get" action="/insolvence/hledat" class="form-inline" role="form">
    <div id="insolvenceForm" class="input-group col-xs-12 custom-search-input">
        <div class="input-group col-xs-12">

            <input class="form-control input" id="Q" name="Q" placeholder="Název společnosti, osoby, IČO, spisová značka, ..." style="max-width: none;" type="text" value="@Model.Q">

            <span class="input-group-btn text-right" style="padding-right:20px;width:1px;">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
                <button type="button" class="btn btn-info btn" style="left:10px;" data-toggle="modal" data-target="#search-query-help">Nápověda</button>
            </span>
        </div>
    </div>
</form>
@Html.Partial("_SearchFormHelp")

<div class="clearfix" style="padding-bottom:20px;"></div>
