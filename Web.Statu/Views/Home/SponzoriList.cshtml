@model HlidacStatu.Lib.Render.ReportDataSource

@using Devmasters
@using HlidacStatu.Lib
@using System.Linq;
@using HlidacStatu.Web.Framework

@{
    ViewBag.ShowBookmarkUrl = true;

    if (ViewBag.SponzoriFirmy == true)
    {
        ViewBag.Title = "Firemní sponzoři";
        ViewBag.SubTitle = ViewBag.Strana + (ViewBag.Rok == null ? "" : " v roce " + ViewBag.Rok);
    }
    else
    {
        ViewBag.Title = "Sponzorující osoby";
        ViewBag.SubTitle = ViewBag.Strana + (ViewBag.Rok == null ? "" : " v roce " + ViewBag.Rok);
    }

}
@section scripts
{
    <script src="/Scripts/typeahead.jquery.min.js"></script>
    <script src="/Scripts/bloodhound.min.js"></script>
    <link href="/Content/typeaheadjs.css" media="all" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>
}


@if (ViewBag.Rok == null)
{
    @section breadcrumb
{
        <ol class="breadcrumb">
            <li><a href="/osoby">Hlídač Osob</a></li>
            <li class="active">Sponzoři @ViewBag.Strana</li>
        </ol>
    }
    <div class="col-xs-12">
        <h4 style="padding: 20px 0 20px 0;">
            Vyberte rok, pro který chcete zobrazit sponzory.
        </h4>
    </div>
    @UtilChart.RenderReportTable("", Model, @"{
                 'language': {
                    'url': '//cdn.datatables.net/plug-ins/1.10.12/i18n/Czech.json'
                },
                'ordering': false,
                'order': [0,'asc'],
                'lengthChange': false,
                'info': false,
                'paging': false
                }")
}
else if (ViewBag.SponzoriFirmy == true)
{
    @section breadcrumb
{
        <ol class="breadcrumb">
            <li><a href="/osoby"> Hlídač Osob</a></li>
            <li><a href="/sponzori?strana=@ViewBag.Strana"> Sponzoři @ViewBag.Strana</a></li>
            <li class="active">@ViewBag.Rok</li>
            <li class="active">Firemní sponzoři</li>
        </ol>
    }
    @UtilChart.RenderReportTable("",Model,@"{
                 'language': {
                    'url': '//cdn.datatables.net/plug-ins/1.10.12/i18n/Czech.json'
                },
                'order': [2,'desc'],
                'lengthChange': false,
                'info': false,
                'paging': true
                }")
}
else
{
    @section breadcrumb
{
        <ol class="breadcrumb">
            <li><a href="/osoby"> Hlídač Osob</a></li>
            <li><a href="/sponzori?strana=@ViewBag.Strana"> Sponzoři @ViewBag.Strana</a></li>
            <li class="active">@ViewBag.Rok</li>
            <li class="active">Sponzorující osoby</li>
        </ol>
        }
        <div>
            @WebUtil.AddBookmarkUrl(this.User, ViewBag.Title + " " + ViewBag.SubTitle, Request.Url.AbsoluteUri, "font-size:200%")
        </div>
        @UtilChart.RenderReportTable("",Model, @"{
                     'language': {
                        'url': '//cdn.datatables.net/plug-ins/1.10.12/i18n/Czech.json'
                    },
                    'order': [2,'desc'],
                    'lengthChange': false,
                    'info': false,
                    'paging': true
                    }")

    }



    @WebUtil.FeedbackModal("Poslat opravu či připomínku")



