    <!-- /Plans -->
    @section footerscripts
{
        <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })

        $(document).ready(function () {
            ga('send', 'event', 'pageload', 'cenik', '@(this.User.Identity.GetUserName())', {
                nonInteraction: true
            });
        });

        </script>
    }

    <!-- Modal -->
    <div class="modal fade" id="cenik_fbForm" tabindex="-1" role="dialog"
         aria-labelledby="cenik_fbTitle" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <button type="button" class="close"
                            data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                        <span class="sr-only">Close</span>
                    </button>
                    <h4 class="modal-title" id="cenik_fbTitle">
                        Zpřístupnění všech funkcí hlidacstatu.cz
                    </h4>
                    <p>
                        Pokud jste novinář, uveďte pracovní email a telefon.
                    </p>
                    <p>
                        Napište nám info o vás či vaší organizaci pro kterou potřebujete data z hlidacstatu.cz
                    </p>
                </div>

                <!-- Modal Body -->
                <form class="form-horizontal" role="form">
                    <div class="modal-body">

                        <div class="form-group">
                            <label class="col-sm-2 control-label"
                                   for="cenik_fbInputTxt">Vzkaz, odůvodnění</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" id="cenik_fbInputTxt" cols="60" rows="5" placeholder="Text zprávy"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label"
                                   for="cenik_fbInputEmail">Váš email</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control"
                                       id="cenik_fbInputEmail" placeholder="Email" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label"
                                   for="cenik_fbInputEmail">Váš telefon</label>
                            <div class="col-sm-10">
                                <input type="tel" class="form-control"
                                       id="cenik_fbInputTel" placeholder="Telefonní číslo" />
                            </div>
                        </div>

                    </div>

                    <!-- Modal Footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">
                            Zrušit
                        </button>
                        <button type="button" onclick="sendcenik_();" class="btn btn-primary" data-dismiss="modal">
                            Odeslat vzkaz
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script>
    function sendcenik_() {
        var prf = '#cenik_';
        var typ = "Zadost o aktivaci sluzby pro neziskovky, skoly apod.";
        var email = $(prf + "fbInputEmail").val();
        var text = $(prf + "fbInputTxt").val();
        text = "tel: " + $(prf + "fbInputTel").val() + " \n" + text;
        var url = $(prf + "fbUrl").val();
        $.get("/sendFeedbackMail", { typ: typ, email: email, txt: text, url: url })
            .always(function () {
                alert("Děkujeme za zaslání zprávy, ozveme se co nejdříve.");
            });

    }
    </script>