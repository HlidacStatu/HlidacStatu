    <div class="row">
        <div class="col-xs-12 col-sm-offset-2 col-sm-8">
            @*<h2 style="margin-bottom:0">Přidejte se k našemu teamu dobrovolníků</h2>
        @if (@slackData[0] > 0)
        {
            <h3 style="margin-top:0;margin-bottom:40px">
                Máme již @slackData[0] spolupracovníků @Html.Raw(Devmasters.Core.Lang.Plural.GetWithZero(slackData[1], "", ", zrovna je <b class='text-danger'>jeden</b> online", ", zrovna jsou <b class='text-danger'>{0}</b> online", ", zrovna je <b class='text-danger'>{0}</b> online")).
            </h3>
        }*@
            @using (Html.BeginForm("PridatSe", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                <div class="form-group">
                    @Html.LabelFor(m => m.Jmeno, new { @class = "col-sm-2 control-label" })
                    <div class="col-xs-10">
                        @Html.TextBoxFor(m => m.Jmeno, new { @class = "form-control", @style = "width:90%;max-width:100%" })
                        @Html.ValidationMessageFor(model => model.Jmeno)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Prijmeni, new { @class = "col-sm-2 control-label" })
                    <div class="col-xs-10">
                        @Html.TextBoxFor(m => m.Prijmeni, new { @class = "form-control", @style = "width:90%;max-width:100%" })
                        @Html.ValidationMessageFor(model => model.Prijmeni)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 control-label" })
                    <div class="col-xs-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @style = "width:90%;max-width:100%" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Phone, new { @class = "col-sm-2 control-label" })
                    <div class="col-xs-10">
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @style = "width:90%;max-width:100%" })
                        @Html.ValidationMessageFor(model => model.Phone)
                        <div class="small text-info">Nepovinný. Telefon se může hodit při úvodním kontaktu a zapojení do teamu</div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.TypPrace, new { @class = "col-sm-2 control-label" })
                    <div class="col-xs-10">
                        <div class="row">
                            <div class="col-xs-12 col-sm-6">
                                <div class="checkbox">
                                    <label>
                                        <input @WebUtil.IfExists(Model.TypPrace.Contains("fundraising"), "checked") name="typPrace" type="checkbox" value="marketing"> Fundraising
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input @WebUtil.IfExists(Model.TypPrace.Contains("investigation"), "checked") name="typPrace" type="checkbox" value="investigace"> Investigace
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input @WebUtil.IfExists(Model.TypPrace.Contains("lawyer"), "checked") name="typPrace" type="checkbox" value="lawyer"> Právní služby (správní právo)
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input @WebUtil.IfExists(Model.TypPrace.Contains("marketing"), "checked") name="typPrace" type="checkbox" value="marketing"> Marketing, SEO, PR
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input @WebUtil.IfExists(Model.TypPrace.Contains("analyzy"), "checked") name="typPrace" type="checkbox" value="analyzy"> Analýza dat, reporty
                                    </label>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <div class="checkbox">
                                    <label>
                                        <input @WebUtil.IfExists(Model.TypPrace.Contains("dev"), "checked") name="typPrace" type="checkbox" value="dev"> Programování, dolování, migrace dat
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input @WebUtil.IfExists(Model.TypPrace.Contains("ux"), "checked") name="typPrace" type="checkbox" value="ux"> Grafika, UX
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input @WebUtil.IfExists(Model.TypPrace.Contains("writing"), "checked") name="typPrace" type="checkbox" value="writing"> Redakční práce, Copywriting
                                    </label>
                                </div>

                                <div class="checkbox">
                                    <label>
                                        <input @WebUtil.IfExists(Model.TypPrace.Contains("other"), "checked") name="typPrace" type="checkbox" value="other"> Jiné
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Vzkaz, new { @class = "col-sm-2 control-label" })
                    <div class="col-xs-10">
                        @Html.TextAreaFor(m => m.Vzkaz, new { @class = "form-control", @style = "width:90%;max-width:100%" })
                        <div class="small text-info">Jestli chcete, napište nám vzkaz, co vás zajímá, s čím chcete pomoci, atd.</div>
                    </div>
                </div>
                <div class="col-xs-offset-2 col-xs-10 ">

                    <button class="btn btn-primary btn-lg" type="submit">
                        Přidám se
                    </button>
                </div>
            }
        </div>

    </div>
    <div style="margin-bottom:50px;"></div>

