    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")"></script>
}
@section breadcrumb
{
    <ol class="breadcrumb">
        <li><a href="/">Hlídač Státu</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
