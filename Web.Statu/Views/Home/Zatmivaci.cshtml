    @helper Render(string[] p, Tuple<int[], int[], int[]> hlasovani, int id, string strana, string popis = "")
    {
        int[] slibili = new int[] {
//237,
467, 6002, 6182, 5447, 5342, 354, 5462, 6194, 5921, 6113, 5402, 6212, 5433, 5269, 5487, 6232, 5490, 5960, 5965, 5999, 6238, 6284, 422, 5979, 5899, 5272, 252, 6157, 5989,

5768, 6188, 5261, 305, 4778, 5461, 5920, 5934, 5313, 6279, 5290, 5938, 6223, 5322,6233, 5962, 5502, 5282, 5506, 6169, 6164,

//6074,
6208,

//6138,
6178, 6142, 6205, 6210,

6191
};
        int[] odhlaseniList = new int[] { //odhlasili se pri poslednim hlasovani aby zakon prosel
5310, 6173, 5926
};

        string jmenoLine = p.Where(m => m.StartsWith(id.ToString() + "|")).First();
        string[] jmenoparts = jmenoLine.Split('|');
        string jmeno = string.Format("{0} {1} {2} {3}", jmenoparts[1], jmenoparts[3], jmenoparts[2], jmenoparts[4]);
        bool slib = slibili.Contains(id);
        bool zena = jmenoparts[2].EndsWith("ová");

        bool hlasProCelek = hlasovani.Item3.Contains(id);
        bool hlasProB1 = hlasovani.Item1.Contains(id);
        bool hlasProJ9 = hlasovani.Item2.Contains(id);
        bool odhlaseni = odhlaseniList.Contains(id);



        <div class='col-xs-12 col-sm-6 col-md-4 text-center center-block' style='border-top:1px solid #ddd'>

            <h3><a onclick="return trackOutLink(this, 'Zatmivaci');" href='http://www.psp.cz/sqw/detail.sqw?id=@id'>@jmeno (@strana)</a></h3>
            <p class='text-center center-block'>
                <a onclick="return trackOutLink(this, 'Zatmivaci');" href='http://www.psp.cz/sqw/detail.sqw?id=@id'>
                    <img src='http://www.psp.cz/eknih/cdrom/2013ps/eknih/2013ps/poslanci/i@(id).jpg' height='180' />
                </a>
                <br />@popis
            </p>
            @if (hlasProCelek)
            {
                <p style='color:red;'>
                    <b><span class='glyphicon glyphicon-thumbs-down'></span></b>
                    @Util.IfExists(zena, "Hlasovala pro zmrzačený zákon jako celek.", "Hlasoval pro zmrzačený zákon jako celek.")
                </p>
            }
            @if (hlasProB1)
            {
                <p style='color:#ff6a00;'>
                    <b><span class='glyphicon glyphicon-thumbs-down'></span></b>
                    @Util.IfExists(zena, "Hlasovala pro vyjmutí zpod kontroly všech státních podniků bez ohledu na jejich povahu.", "Hlasoval pro vyjmutí zpod kontroly všech státních podniků bez ohledu na jejich povahu.")
                </p>
            }
            @if (hlasProJ9)
            {
                <p style='color:#ff6a00;'>
                    <b><span class='glyphicon glyphicon-thumbs-down'></span></b>
                    @Util.IfExists(zena, "Hlasovala pro vyjmutí zpod kontroly všech krajských a měststkých podniků s průmyslovou a obchodní povahou.", "Hlasoval pro vyjmutí zpod kontroly všech krajských a měststkých podniků s průmyslovou a obchodní povahou.")
                </p>
            }
            @if (odhlaseni)
            {
                <p style='color:red;'>
                    <b><span class='glyphicon glyphicon-thumbs-down'></span></b>
                    @Util.IfExists(zena, "Při opakovaném finálním hlasování se záměrně odhlásila jako nepřítomna, aby se snížil počet potřebných hlasů pro projití zákona. Styděla se pro zákon otevřeně hlasovat.", "Při opakovaném finálním hlasování se záměrně odhlásil jako nepřítomen, aby se snížil počet potřebných hlasů pro projití zákona. Styděl se pro zákon otevřeně hlasovat.")
                </p>
            }
            @if (slib)
            {
                if (zena)
                {
                    <p class='text-danger'>Porušila slib voličům</p>
                    <p class=''>Tato poslankyně před volbami slíbila podporovat a schválit plnohodnotný Registr smluv. Tímto hlasování podvedla své voliče a porušila svůj předvolební slib.</p>
                }
                else
                {
                    <p class='text-danger'>Porušil slib voličům</p>
                    <p class=''>Tento poslanec před volbami slíbil podporovat a schválit zcela plnohodnotný Registr smluv. Tímto hlasování podvedl své voliče a porušil svůj předvolební slib.</p>
                }
            }

        </div>
    }
