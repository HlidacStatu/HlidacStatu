@model HlidacStatu.Web.Controllers.HomeController.ImageBannerCoreData

@{
    Layout = "";
    string width = "1920px";
    string height = "1080px";
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://fonts.googleapis.com/css?family=Cabin:400,400i,600,700&amp;subset=latin-ext" rel="stylesheet">
    <script src="~/Scripts/jquery-1.11.3.min.js"></script>
    <script src="~/Scripts/textFit.min.js"></script>
    @*<link rel='stylesheet' href='~/Content/bootstrap.css?r=@(HlidacStatu.Util.Consts.Rnd.Next())' type='text/css' />*@
    <link rel='stylesheet' href='~/Content/socialBanner.css?r=@(HlidacStatu.Util.Consts.Rnd.Next())' type='text/css' />


</head>
<body style="width:@width;height:@height;background:url(/Content/Img/social-banner-16x9.png) no-repeat;">
    @if (!string.IsNullOrEmpty(Model.img))
    {
    <span class="picture" style="position:absolute;top:130px;left:120px;background-image: url('@Model.img')"></span>
    }

    @if (string.IsNullOrEmpty(Model.title))
    {
        <div class="jtextfill" style="position: absolute;top: 120px;left:250px;width: 1310px;height: 800px;
/*background-color:rgba(222,222,222,0.7);*/
">

            <span class="mytxt">
                @Html.Raw(Model.body)
            </span>

        </div>

    }
    else
    {

        <div class="jtextfill" style="position:absolute;top:120px;left:250px;width: 1310px;height: 120px;
/*background-color:rgba(222,222,222,0.7);*/
">
            <span class="mytxt" style="font-weight:700">
                @Html.Raw(Model.title)
            </span>
        </div>
        <div class="jtextfill" style="position: absolute;top: 260px;left:250px;width: 1310px;height: 50px;
/*background-color:rgba(222,222,222,0.7) ;*/
">
            <span class="mytxt" style="font-weight:100">
                @Html.Raw(Model.subtitle)
            </span>
        </div>
        <div class="jtextfill" style="position: absolute;top: 350px;left:250px;width: 1310px;height: 550px;
/*background-color:rgba(222,222,222,0.7) ;*/
">

            <span class="mytxt">
                @Html.Raw(Model.body)
            </span>

        </div>
    }

    <div class="jtextfill" style="position:absolute;top:950px;left:250px;width:1300px;height: 50px;
/*background-color:rgba(222,222,222,0.7) ;*/
         ">

        <span class="mytxt">
            @Html.Raw(Model.footer)
        </span>


    </div>





    <script>
        textFit(document.getElementsByClassName('jtextfill'), {
            multiLine: true, detectMultiLine: true, minFontSize: 20, maxFontSize: 400, alignVert: false, alignHoriz: false
        });

    </script>
</body>
</html>

